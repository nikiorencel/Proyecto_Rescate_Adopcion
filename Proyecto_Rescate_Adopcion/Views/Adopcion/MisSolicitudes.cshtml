@model IEnumerable<Proyecto_Rescate_Adopcion.Models.Adopcion>

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<div class="page-solicitudes">
    <div class="solicitudes-card">
        <div class="solicitudes-header">
            <img src="~/Logo.png" alt="" style="width:28px;height:28px;border-radius:8px;">
            <h2 class="solicitudes-title">Mis solicitudes de adopción</h2>
        </div>

        @{
            var ok = TempData["ok"] as string;
            var msg = TempData["msg"] as string;
        }

        @if (!string.IsNullOrEmpty(ok))
        {
            <div class="alert success" id="toast-ok">@ok</div>
        }
        @if (!string.IsNullOrEmpty(msg))
        {
            <div class="alert warn" id="toast-warn">@msg</div>
        }

        @if (!Model.Any())
        {
            <div class="empty-state">Aún no hiciste solicitudes.</div>
        }
        else
        {
            <table class="solicitudes-table">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Mascota</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model)
                    {
                        var estado = (s.Estado ?? "Pendiente").ToLower();
                        var cls = estado switch
                        {
                            "aprobada" => "badge badge--aprobada",
                            "rechazada" => "badge badge--rechazada",
                            _ => "badge badge--pendiente"
                        };

                        <tr>
                            <!-- 1) FECHA -->
                            <td>@s.FechaSolicitud.ToString("dd/MM/yyyy HH:mm")</td>

                            <!-- 2) MASCOTA (link al detalle con returnUrl) -->
                            <td>
                                <a asp-controller="Animal"
                                   asp-action="Details"
                                   asp-route-id="@s.Animal!.IdSolicitud"
                                   asp-route-returnUrl="@Url.Action("MisSolicitudes", "Adopcion")"
                                   class="link-nombre">
                                    @s.Animal!.NombreAnimal
                                </a>
                            </td>

                            <!-- 3) ESTADO -->
                            <td><span class="@cls">@s.Estado</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>