@model Proyecto_Rescate_Adopcion.Models.Login
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Rescate y Adopción de Mascotas - Iniciar sesión</title>
    <style>
        :root {
            --naranja: #ff7a00;
            --bg: #fff7f2;
            --borde: #e9e9e9;
            --texto: #222;
            --gris: #8a8a8a;
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            background: var(--bg);
            font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .card {
            background: #fff;
            width: 360px;
            padding: 36px 28px;
            border-radius: 18px;
            box-shadow: 0 10px 26px rgba(0,0,0,.08);
            text-align: center;
        }

        h1 {
            font-size: 22px;
            margin: 0 0 16px;
            color: var(--texto);
            letter-spacing: .3px;
        }

        h2 {
            font-size: 26px;
            margin: 6px 0 18px;
            color: var(--texto);
        }

        .logo {
            width: 96px;
            height: 96px;
            margin: 2px auto 8px;
            border-radius: 50%;
            display: block;
        }

        input {
            width: 100%;
            padding: 12px 14px;
            border: 1px solid var(--borde);
            border-radius: 10px;
            outline: none;
            font-size: 15px;
            margin: 10px 0;
        }

            input::placeholder {
                color: #b9b9b9;
            }

        button {
            width: 100%;
            padding: 12px 16px;
            border: none;
            background: var(--naranja);
            color: #fff;
            border-radius: 10px;
            font-weight: 700;
            font-size: 16px;
            cursor: pointer;
            margin-top: 10px;
        }

            button:hover {
                filter: brightness(1.05);
            }

        .link {
            display: block;
            margin-top: 14px;
            color: var(--gris);
            font-size: 14px;
            text-decoration: none;
        }

        .error {
            color: #c0392b;
            font-size: 14px;
            margin-top: 8px;
        }
    </style>
</head>
<body>
    <div class="card">
        <h1>RESCATE Y ADOPCIÓN DE MASCOTAS</h1>

        <img src=~/Logo.png" alt="Logo" class="logo" />

        <h2>Iniciar sesión</h2>

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <input asp-for="Email" type="email" placeholder="Correo electrónico" />
            <span asp-validation-for="Email" class="error"></span>

            <input asp-for="Contrasenia" type="password" placeholder="Contraseña" />
            <span asp-validation-for="Contrasenia" class="error"></span>

            <button type="submit">Iniciar sesión</button>
            <a class="link" href="#">¿Olvidaste tu contraseña?</a>

            @if (ViewBag.Error != null)
            {
                <div class="error">@ViewBag.Error</div>
            }
        </form>
    </div>

    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>