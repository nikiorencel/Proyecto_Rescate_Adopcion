                        aria-disabled="@(P(6) ? "true" : "false")"
                        title="@(P(6) ? "Ya tenés una solicitud pendiente" : "Solicitar adopción")">
                    @(P(6) ? "Ya solicitada" : "Solicitar adopción")
                </button>
            </form>
        </article>

        <article class="card">
            <img src="~/Perro2.png" alt="Mia" />
            <div class="card-body">
                <p class="name">Mia</p>
                <p class="meta">5 años</p>
                <p class="meta">Rosario</p>
            </div>
           
            <form asp-controller="Adopcion" asp-action="Solicitar" method="post">
                @Html.AntiForgeryToken()
