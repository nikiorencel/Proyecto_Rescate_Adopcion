                <button type="submit"
                        class="btn @(P(7) ? "is-disabled" : "")"
                        disabled="@(P(7) ? "disabled" : null)"
                        aria-disabled="@(P(7) ? "true" : "false")"
                        title="@(P(7) ? "Ya tenés una solicitud pendiente" : "Solicitar adopción")">
                    @(P(7) ? "Ya solicitada" : "Solicitar adopción")
                </button>
            </form>
        </article>

        <article class="card">
            <img src="~/Conejo1.png" alt="Coco" />
            <div class="card-body">
                <p class="name">Coco</p>
                <p class="meta">1 año</p>
                <p class="meta">Mendoza</p>
            </div>

            <form asp-controller="Adopcion" asp-action="Solicitar" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="animalId" value="8" />

                <button type="submit"
                        class="btn @(P(8) ? "is-disabled" : "")"
                        disabled="@(P(8) ? "disabled" : null)"
                        aria-disabled="@(P(8) ? "true" : "false")"
                        title="@(P(8) ? "Ya tenés una solicitud pendiente" : "Solicitar adopción")">
                    @(P(8) ? "Ya solicitada" : "Solicitar adopción")
                </button>
            </form>
        </article>
    </section>
</div>