@{
    ViewData["Title"] = "Inicio";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

@{
    var pendientes = ViewBag.Pendientes as HashSet<int> ?? new HashSet<int>();
    Func<int, bool> P = id => pendientes.Contains(id);

    Func<int, bool> YaPend = id => pendientes.Contains(id);
    Func<int, string> BtnTxt = id => YaPend(id) ? "Ya solicitada" : "Solicitar adopción";
    Func<int, string> BtnCls = id => YaPend(id) ? "btn disabled" : "btn";
    Func<int, string> BtnAttr = id => YaPend(id) ? "disabled=\"disabled\" aria-disabled=\"true\" tabindex=\"-1\"" : "";
    Func<int, string> BtnTtl = id => YaPend(id) ? "Ya tenés una solicitud pendiente" : "Solicitar adopción";
}

<div class="container">
    <!-- HERO -->
    <section class="hero">
        <div class="hero-card">
            <h2>Encuentra a tu nueva mascota</h2>
            <p>Explora mascotas que necesitan un hogar y gestiona el proceso de adopción.</p>
            <form asp-controller="Animal" asp-action="Index" method="get" class="search">
                <input type="text" name="localidad" placeholder="Localidad" />
                <button type="submit" title="Buscar">🔍</button>
            </form>
        </div>
    </section>

    <!-- ACCESOS RÁPIDOS -->
    <section class="quick">
        <div class="qcard">
            <div class="qicon">↗</div>
            <div>
                <p class="qtitle">Registrar Mascota</p>
                <p class="qdesc">Da de alta mascotas en adopción con facilidad.</p>
            </div>
        </div>
        <div class="qcard">
            <div class="qicon">📄</div>
            <div>
                <a class="qtitle" asp-controller="Adopcion" asp-action="MisSolicitudes">
                    Solicitudes de Adopción
                </a>
                <p class="qdesc">Revisa y gestiona las solicitudes pendientes.</p>
            </div>
        </div>
        <div class="qcard">
            <div class="qicon">🐾</div>
            <div>
                <p class="qtitle">Historial de Adopciones</p>
                <p class="qdesc">Consulta el estado y tu historial.</p>
            </div>
        </div>
    </section>

    <!-- MASCOTAS EN ADOPCIÓN -->
  
    <h3>Mascotas en Adopción</h3>
    <section class="grid">
        <article class="card">
            <img src="~/Perro1.png" alt="Luna" />
            <div class="card-body">
                <p class="name">Luna</p>
                <p class="meta">2 años</p>
                <p class="meta">Buenos Aires</p>
            </div>

            <form asp-controller="Adopcion" asp-action="Solicitar" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="animalId" value="5" />

                <button type="submit"
                        class="btn @(P(5) ? "is-disabled" : "")"
                        disabled="@(P(5) ? "disabled" : null)"
                        aria-disabled="@(P(5) ? "true" : "false")"
                        title="@(P(5) ? "Ya tenés una solicitud pendiente" : "Solicitar adopción")">
                    @(P(5) ? "Ya solicitada" : "Solicitar adopción")
                </button>
            </form>
        </article>

        <article class="card">
            <img src="~/Gato1.png" alt="Simba" />
            <div class="card-body">
                <p class="name">Simba</p>
                <p class="meta">3 años</p>
                <p class="meta">Córdoba</p>
            </div>
               <form asp-controller="Adopcion" asp-action="Solicitar" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="animalId" value="6" />

                <button type="submit"
                        class="btn @(P(6) ? "is-disabled" : "")"
