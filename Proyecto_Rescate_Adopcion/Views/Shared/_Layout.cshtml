<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - Rescate y Adopción</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="nav-left">
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/Logo.png" alt="Logo" class="logo" />
                </a>
            </div>
            <div class="nav-right">
                <a asp-controller="Cuenta" asp-action="Login">Cerrar sesión</a>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>...</footer>

    @RenderSection("Scripts", required: false)
</body>
</html>