<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - Rescate y Adopción</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="nav-left">
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/Logo.png" alt="Logo" class="logo" />
                </a>
            </div>
            <div class="nav-center" style="display: flex; gap: 24px; align-items: center;">
                <a asp-controller="Home" asp-action="Index" class="nav-link">Inicio</a>
                <a asp-controller="Animal" asp-action="Create" class="nav-link">Publicar Mascota</a>
                <a asp-controller="Animal" asp-action="MisPublicaciones" class="nav-link">Mis Publicaciones</a>
                <a asp-controller="Adopcion" asp-action="MisSolicitudes" class="nav-link">Mis Solicitudes</a>
                <a asp-controller="Adopcion" asp-action="SolicitudesRecibidas" class="nav-link">Solicitudes Recibidas</a>
                <a asp-controller="Adopcion" asp-action="Historial" class="nav-link">Historial</a>
            </div>
            <div class="nav-right">
                <a asp-controller="Cuenta" asp-action="Logout" class="logout-link">Cerrar sesión</a>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>
    <footer>...</footer>
    @RenderSection("Scripts", required: false)
</body>
</html>